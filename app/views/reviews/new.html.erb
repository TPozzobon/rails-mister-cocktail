<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3>Add review</h3>

      <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content %>
        <%= f.submit class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
