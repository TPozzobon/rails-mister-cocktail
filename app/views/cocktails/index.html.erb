<div class="banner" style="background-position: center; background-image: linear-gradient(200deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktail_banner.jpg' %>');">
  <div class="banner-content">
    <h1>Cocktail Fever</h1>
    <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
